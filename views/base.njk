{% extends "html.njk" %}
{% import "./partials/macros.njk" as macros %}

{% block body %}
	<div class="body">
		{% include "./partials/header.njk" %}
		{% include "./partials/nav.njk" %}
		{% block content %}{% endblock %}
	</div>
	<div class="toast toast-top toast-end">
		{% block alert %}
			{% if error %}
				{{ macros.alert_error(error) }}
			{% endif %}
			{% if success %}
				{{ macros.alert_success(success) }}
			{% endif %}
			{% if message %}
				{{ macros.alert_info(message) }}
			{% endif %}
		{% endblock %}
	</div>
	{% block script %}{% endblock %}
{% endblock %}
