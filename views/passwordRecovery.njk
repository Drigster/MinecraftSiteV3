{% extends "base.njk" %}

{% block title %}Логин{% endblock %}

{% block content %}
<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
	<div class="w-full max-w-md space-y-8 bg-bg p-8 rounded-2xl">
		<div>
			<h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-foxy-orange">Смена пароля</h2>
		</div>
		<form class="mt-8" action="" method="POST">
			<div class="rounded-md shadow-sm">
				<div>
					<label for="newpassword" class="sr-only">Пароль</label>
					<input id="newpassword" name="newpassword" type="password" required
						class="relative block w-full py-2"
						placeholder="Пароль">
				</div>
				<div>
					<label for="newpassword2" class="sr-only">Повторить пароль</label>
					<input id="newpassword2" name="newpassword2" type="password" required
						class="relative block w-full py-2"
						placeholder="Повторить пароль">
				</div>
			</div>
			<div>
				<button type="submit" class="group relative flex w-full justify-center">
					Войти
				</button>
			</div>
		</form>
	</div>
</div>
{% endblock %}
{% block alert %}
	{% if error %}
		{{ macros.alert_error(error) }}
	{% endif %}
{% endblock %}